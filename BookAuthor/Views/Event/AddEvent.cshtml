@model BookAuthor.Models.Event

@{
    ViewBag.Title = "Adding a new event";
}
<head>
    <link href="@Url.Content("~/wwwroot/css/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body class="gradient">
    <form asp-action="AddEvent" asp-controller="Event">
        <div class="form-group p-1">
            <label asp-for="Name" class="control-label p-1 text-white"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group p-1">
            <label asp-for="Description" class="control-label p-1 text-white"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group p-1">
            <input class="btn btn-dark" type="submit" value="Save" />
        </div>
    </form>
</body>
