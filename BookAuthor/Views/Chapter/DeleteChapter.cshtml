@model BookAuthor.Models.Chapter
@{
    ViewBag.Title = "Удаление главы";
}
<head>
    <link href="@Url.Content("~/wwwroot/css/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body class="gradient">
    <div>
        <dl class="dl-horizontal">
            <dt class="text-white">Наименование удаляемой главы (Будет удалена вместе со всеми страницами):</dt>
            <dd class="text-white">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div>
        <form asp-controller="Chapter" asp-action="DeleteChapter" method="post">
            <div class="form-group ">
                <input type="submit" class=" btn btn-dark" value="Удалить" />
            </div>
        </form>
    </div>
</body>
