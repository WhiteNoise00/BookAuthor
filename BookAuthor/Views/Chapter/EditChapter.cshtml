@model BookAuthor.Models.Chapter

@{
    ViewBag.Title = "Редактирование главы";
}
<head>
    <link href="@Url.Content("~/wwwroot/css/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body class="gradient">
    <form asp-action="EditChapter" asp-controller="Chapter" asp-route-id="@Model.Id">

        <div class="form-group p-1">
            <label asp-for="Name" class="control-label p-1 text-white"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group p-1">
            <label asp-for="Description" class="control-label p-1 text-white"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group p-1">
            <label asp-for="Author" class="control-label p-1 text-white"></label>
            <input type="text" asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-group p-1">
            <input type="submit" class="btn btn-dark" value="Сохранить" />
        </div>

    </form>

</body>