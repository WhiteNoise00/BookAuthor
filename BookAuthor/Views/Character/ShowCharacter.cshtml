@model BookAuthor.Models.CharacterViewModel

@{
    ViewBag.Title = Model.Name;
}
<head>
    <link href="@Url.Content("~/wwwroot/css/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body class="gradient"> 
    <form asp-action="ShowCharacter" asp-controller="Character" asp-route-id="@Model.Id">
        <div style="text-align:center">
            <h1 class="text-white">@Model.Name</h1>
        </div>
        <div class="row">
            <div class="col">
                <p><img style='width:500px; height:800px;' src="@Url.Content(Model.ImagePath)" /></p>
            </div>
            <div class="col">
                <div class="row">
                    <label asp-for="Name" class="control-label p-1 text-white"></label>
                    <label class="control-label p-1 text-white"> @Model.FullName</label>
                </div>
                <div class="row">
                    <label asp-for="Age" class="control-label p-1 text-white"></label>
                    <label class="control-label p-1 text-white"> @Model.Age</label>
                </div>
                <div class="row">
                    <label asp-for="Gender" class="control-label p-1 text-white"></label>
                    <label class="control-label p-1 text-white"> @Model.Gender</label>
                </div>
                <div class="row">
                    <label asp-for="Description" class="control-label p-1 text-white"></label>
                    <label class="control-label p-1 text-white"> @Model.Description</label>
                </div>
                <div class="row">
                    <label asp-for="History"  class="control-label p-1 text-white"></label>
                </div>
                <div class="row">
                    <label class="control-label p-1 text-white"> @Model.History</label>
                </div>
            </div>
        </div>            
    </form>
</body>