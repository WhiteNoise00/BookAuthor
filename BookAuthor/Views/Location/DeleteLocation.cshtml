@model BookAuthor.Models.Location

@{
    ViewData["Title"] = "Delete location";
}
<head>
    <link href="@Url.Content("~/wwwroot/css/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body class="gradient">
    <div>
        <dl class="dl-horizontal">
            <dt class="text-white">Name of the deleted location:</dt>
            <dd class="text-white">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div>
        <form asp-controller="Location" asp-action="DeleteLocation" method="post">
            <div class="form-group">
                <input class="btn btn-dark" type="submit" value="Delete" />
            </div>
        </form>
    </div>
</body>